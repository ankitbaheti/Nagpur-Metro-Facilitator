<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">#ff9800</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#ef6c00</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#ffcc80</item>
    </style>

    <style name="NearestMetroTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">@color/ui22</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/ui21</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ui11</item>
    </style>

     <style name="MetroLocatorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">@color/ui33</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/ui32</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ui22</item>
    </style>

    <style name="ETATheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">@color/ui44</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/ui55</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ui33</item>
    </style>



    <!-- Style for header text in the order form -->
    <style name="HeaderTextStyle1">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>

    </style>

    <style name="MainUI">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">8dp</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">25dp</item>
    </style>
    <style name="RouteInfoStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">12sp</item>

    </style>
</resources>
